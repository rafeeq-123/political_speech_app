<div id="accordion" role="tablist" aria-multiselectable="true">
  <div class="card">
    <div class="card-header" role="tab" id="headingOne">
      <h5 class="mb-0">
        <button data-toggle="collapse" class="btn btn-primary"data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Leave a Comment
        </button>
      </h5>
    </div>
    <div id="collapseOne" class="collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="card-block">
      <%= @speech.comments.each do |comment| %>
      <%=comment.comment%>
       <%end%>

      </div>
    </div>
  </div>
